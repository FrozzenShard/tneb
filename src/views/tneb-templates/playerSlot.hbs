<div class="party-slot row">
    <div class="col-lg-12 name-display">
        <span class="name">{{name}}</span><input class="form-control" style="display:none;" type="text">
        <span class="text-muted title"></span>
    </div>
    <div class="health-display col-lg-6">
        <span class="name">{{stats.health.name}}</span>
        <span class="bar red" style="width={{healthPercent}}%"></span>
    </div>
    <div class="mana-display col-lg-6">
        <span class="name">{{stats.mana.name}}</span>
        <span class="bar blue" style="width={{manaPercent}}%"></span>
    </div>
    <div class="exp-display col-lg-12">
        <span class="name">Exp</span>
        <span class="bar orange"></span>
    </div>
    <div class="speed-display col-lg-12">
        <span class="name">{{stats.speed.name}}</span>
        <span class="bar blue" style="width={{speedPercent}}%"></span>
    </div>
    <button class="btn btn-block btn-info attack" {{disabled}}>Attack</button>
    <ul class="skills">
        <li>Fireball</li>
    </ul>
</div>